MAX_TOTAL_SIZE_MB=20

# ======================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ======================================
# Modo desarrollo DESACTIVADO para producción
DEV_MODE=false

# Configuración Next.js
NODE_ENV=production

# ======================================
# CONFIGURACIÓN BANAHOSTIN
# ======================================
